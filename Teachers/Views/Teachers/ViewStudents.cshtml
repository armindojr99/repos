
@{
    ViewBag.Title = "ViewStudents";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
    ViewBag.Heading = "View Students";
}

<div class="content">
    <div class="page-header">
        <div class="pull-left">
            <h2 class="text-dark mb-4">Students</h2>
        </div>
        <div class="pull-right">
            <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModalCenter">
                &plus;
            </button>
        </div>
        <div class="clearfix"></div>
    </div>


    <!--Student table-->
    <div class="card shadow">

        <div class="card-header py-3">
            <p class="text-primary m-0 font-weight-bold">All Students</p>
        </div>

        <div class="card-body">
            <!--div class="container mb-3 mt-3"-->
            <table class="table table-striped table-hover mydatatable" style="width: 100%">
                <thead>
                    <tr>
                        <th>Surname</th>
                        <th>Name</th>
                        <th>Student Number</th>
                        <th>Email</th>
                        <th>Date Of Birth</th>
                        <th>Gender</th>
                        <th>Grade</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.last_name</td>
                            <td>@item.first_name</td>
                            <td>@item.student_number</td>
                            <td>@item.email_address</td>
                            <td>@item.date_of_birth</td>
                            <td>@item.Gender</td>
                            <td>@item.Grade</td>
                            <!--<td><a class="btn btn-primary btn-circle btn-sm xyz" href="SProfile.html" role="button">I</a></td>-->
                        </tr>
                    }

                </tbody>
            </table>
            <!--/div-->
        </div>
    </div>
</div>



<div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">New Student</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="box">
                    @using (Html.BeginForm("AddStudent", "Teachers", FormMethod.Post))
                    {
                        <form>

                            <div>
                                <input type="text" name="first_name" required>
                                <label for="first_name" class="label-name">
                                    <span>
                                        First Name
                                    </span>
                                </label>
                            </div>

                            <div>
                                <input type="text" name="last_name" required>
                                <label for="last_name" class="label-name">
                                    <span>
                                        Last Name
                                    </span>
                                </label>
                            </div>

                            <div>
                                <input type="email" name="email_address" required>
                                <label for="email_address" class="label-name">
                                    <span>
                                        Email
                                    </span>
                                </label>
                            </div>

                            <div>
                                <input type="date" name="date" required>
                                <label for="email_address" class="label-name">
                                    <span>
                                        Date Of Birth
                                    </span>
                                </label>
                            </div>

                            <div>
                                <select id="gender" name="gender">
                                    <option style="display: none;" disabled selected></option>
                                    <option value="Female">Female</option>
                                    <option value="Male">Male</option>
                                </select>
                                <label for="gender" class="label-name">
                                    <span>
                                        Gender
                                    </span>
                                </label>
                            </div>

                            <div>
                                <select id="Grade" name="grade">
                                    <option style="display: none;" disabled selected></option>
                                    <option value="8">8</option>
                                    <option value="9">9</option>
                                    <option value="10">10</option>
                                    <option value="11">11</option>
                                    <option value="12">12</option>
                                </select>
                                <label for="grade" class="label-name">
                                    <span>
                                        Grade
                                    </span>
                                </label>
                            </div>

                            <input type="submit" name="" value="Add Student">

                        </form>
                    }

                </div>

            </div>
        </div>
    </div>
</div>