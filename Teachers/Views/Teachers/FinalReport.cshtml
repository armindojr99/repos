            <!--Start-->
            <div class="content">
                <div class="row center" style="align-content: center;">
                    <img src="~/Images/Nizamiye.png" alt="Nizamiye.png">
                </div>
                <ul class="responsive-table" valign="top">
                    <li class="table-header">
                        <div class="col col-3">Subject</div>
                        <div class="col col-1" style="text-align: center;">Level</div>
                        <div class="col col-1" style="text-align: center;">Symbol</div>
                        <div class="col col-1" style="text-align: center;">Average</div>
                        <div class="col col-5">Comment</div>
                    </li>

                    @foreach (var item in Model)
                    {

                        using (Html.BeginForm())
                        {
                            if (80 <= item.mark && item.mark <= 100)
                            {
                                if (80 <= item.mark && item.mark < 90)
                                {
                                <li class="table-row-distinction">
                                    <div class="col col-3" data-label="Subject">@item.subject</div>
                                    <div class="col col-1" data-label="Level" style="text-align: center;">7</div>
                                    <div class="col col-1" data-label="Symbol" style="text-align: center;">A</div>
                                    <div class="col col-1" data-label="Grade" style="text-align: center;">@item.mark</div>
                                    <div class="col col-5" data-label="Comment">
                                        You have worked delligently and produced a pleasing result. Well done.
                                    </div>
                                </li>
                                }
                                else if(90 <= item.mark && item.mark <= 100)
                                {
                                <li class="table-row-distinction">
                                    <div class="col col-3" data-label="Subject">@item.subject</div>
                                    <div class="col col-1" data-label="Level" style="text-align: center;">7</div>
                                    <div class="col col-1" data-label="Symbol" style="text-align: center;">A</div>
                                    <div class="col col-1" data-label="Grade" style="text-align: center;">@item.mark</div>
                                    <div class="col col-5" data-label="Comment">
                                        An outstanding achievement from a highly dedicated pupil. Keep it up.
                                    </div>
                                </li>
                                }
                            }
                            else if (70 <= item.mark && item.mark <= 79)
                            {

                                <li class="table-row">
                                    <div class="col col-3" data-label="Subject">@item.subject</div>
                                    <div class="col col-1" data-label="Level" style="text-align: center;">6</div>
                                    <div class="col col-1" data-label="Symbol" style="text-align: center;">B</div>
                                    <div class="col col-1" data-label="Grade" style="text-align: center;">@item.mark</div>
                                    <div class="col col-5" data-label="Comment">
                                        You have produced a good result but you have to work harder to get an "A".
                                    </div>
                                </li>
                            }
                            else if (60 <= item.mark && item.mark <= 69)
                            {

                                <li class="table-row">
                                    <div class="col col-3" data-label="Subject">@item.subject</div>
                                    <div class="col col-1" data-label="Level" style="text-align: center;">5</div>
                                    <div class="col col-1" data-label="Symbol" style="text-align: center;">C</div>
                                    <div class="col col-1" data-label="Grade" style="text-align: center;">@item.mark</div>
                                    <div class="col col-5" data-label="Comment">
                                        You have produced a confortable result and you have the capacity to get better.
                                    </div>
                                </li>
                            }
                            else if (50 <= item.mark && item.mark <= 59)
                            {
                                <li class="table-row">
                                    <div class="col col-3" data-label="Subject">@item.subject</div>
                                    <div class="col col-1" data-label="Level" style="text-align: center;">4</div>
                                    <div class="col col-1" data-label="Symbol" style="text-align: center;">D</div>
                                    <div class="col col-1" data-label="Grade" style="text-align: center;">@item.mark</div>
                                    <div class="col col-5" data-label="Comment">
                                        You must spend more time on your school work.
                                    </div>
                                </li>
                            }
                            else if (40 <= item.mark && item.mark <= 49)
                            {
                                <li class="table-row-failure">
                                    <div class="col col-3" data-label="Subject">@item.subject</div>
                                    <div class="col col-1" data-label="Level" style="text-align: center;">3</div>
                                    <div class="col col-1" data-label="Symbol" style="text-align: center;">E</div>
                                    <div class="col col-1" data-label="Grade" style="text-align: center;">@item.mark</div>
                                    <div class="col col-5" data-label="Comment">
                                        You need to show more interest in your work to get better.
                                    </div>
                                </li>
                            }
                            else if (30 <= item.mark && item.mark <= 39)
                            {
                                <li class="table-row-failure">
                                    <div class="col col-3" data-label="Subject">@item.subject</div>
                                    <div class="col col-1" data-label="Level" style="text-align: center;">2</div>
                                    <div class="col col-1" data-label="Symbol" style="text-align: center;">E</div>
                                    <div class="col col-1" data-label="Grade" style="text-align: center;">@item.mark</div>
                                    <div class="col col-5" data-label="Comment">
                                        A very dissatisfactory result. A change in your study method definetely needed.
                                    </div>
                                </li>
                            }
                            else if (0 <= item.mark && item.mark <= 29)
                            {
                                <li class="table-row-failure">
                                    <div class="col col-3" data-label="Subject">@item.subject</div>
                                    <div class="col col-1" data-label="Level" style="text-align: center;">1</div>
                                    <div class="col col-1" data-label="Symbol" style="text-align: center;">E</div>
                                    <div class="col col-1" data-label="Grade" style="text-align: center;">@item.mark</div>
                                    <div class="col col-5" data-label="Comment">
                                        A very dissatisfactory result. A change in your study method is definetely needed.
                                    </div>
                                </li>
                            }
                        }
                    }
                    <li class="table-row">
                        <div class="col col-7" data-label="Term Average" style="text-align: center; font-weight: bold;">Term Average</div>
                        <div class="col col-5" style="text-align: center;">
                            @ViewBag.Average
                        </div>
                    </li>
                </ul>
            </div>
