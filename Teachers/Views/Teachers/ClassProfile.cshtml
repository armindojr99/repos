
@{
    /**/

    ViewBag.Title = "ClassProfile";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}


<div class="content">

    <div class="page-header">
        <div class="pull-left">
            <!--Replace with Class Name-->
            <h3 class="text-dark mb-4"></h3>
        </div>
        <div class="pull-right">
            <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#AddStudent">
                Add Student
            </button>
        </div>
        <div class="clearfix"></div>
    </div>


    <div class="row mb-3">
        <div class="col-lg-4">
            <div class="card mb-3">
                <div class="card-body text-center shadow">
                    <img class="rounded-circle mb-3 mt-4" src="~/Content/assets/img/account.png" width="160" height="160" alt="My Photo" />
                    <p style="text-align: center;"><strong> @ViewBag.Name</strong></p> <!--Replace with teachers name-->
                    <div class="mb-3"></div>
                </div>
            </div>
        </div>
        <div class="col-lg-8">
            <div class="row mb-3 d-none">
                <div class="col">
                    <div class="card text-white bg-primary shadow">
                        <div class="card-body">
                            <div class="row mb-2">
                                <div class="col">
                                    <p class="m-0">Peformance</p>
                                    <p class="m-0"><strong>65.2%</strong></p>
                                </div>
                                <div class="col-auto"><i class="fas fa-rocket fa-2x"></i></div>
                            </div>
                            <p class="text-white-50 small m-0"><i class="fas fa-arrow-up"></i>&nbsp;5% since last month</p>
                        </div>
                    </div>
                </div>
                <div class="col">
                    <div class="card text-white bg-success shadow">
                        <div class="card-body">
                            <div class="row mb-2">
                                <div class="col">
                                    <p class="m-0">Peformance</p>
                                    <p class="m-0"><strong>65.2%</strong></p>
                                </div>
                                <div class="col-auto"><i class="fas fa-rocket fa-2x"></i></div>
                            </div>
                            <p class="text-white-50 small m-0"><i class="fas fa-arrow-up"></i>&nbsp;5% since last month</p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <div class="card shadow mb-3">
                        <div class="card-header py-3">
                            <p class="text-primary m-0 font-weight-bold">Class Details</p>
                        </div><div class="card-body">
                            <form>
                                <div class="form-row">
                                    <div class="col">
                                        <div class="form-group">
                                            <label for="first_name"><strong>Subject</strong></label>
                                            <input class="form-control" placeholder=@ViewBag.Subject type="text" readonly="readonly" />
                                        </div>
                                    </div>
                                </div>

                                <div class="form-row">
                                    <div class="col">
                                        <div class="form-group">
                                            <label for="last_name"><strong>Grade</strong></label>
                                            <input class="form-control" placeholder=@ViewBag.Grade type="text" readonly="readonly" />
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
    <div class="card shadow">
        <div class="card-header py-3">
            <p class="text-primary m-0 font-weight-bold">Students</p>
        </div>
        <div class="card-body">

            <table class="table table-striped table-hover mydatatable" style="width: 100%">
                <thead>
                    <tr>
                        <th>Student ID</th>
                        <th>Name</th>
                        <th>Surname</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in ViewBag.Students)
                    {
                        <tr>
                            <td>@item.student_number</td>
                            <td>@item.first_name</td>
                            <td>@item.last_name</td>
                        </tr>
                    }
                </tbody>
            </table>

        </div>
    </div>
</div>




<!-- Modal to add student-->
<div class="modal fade" id="AddStudent" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Add Student to Class</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="box">
                    @using (Html.BeginForm("Enrol", "Teachers", FormMethod.Post))
                    {
                        <form>
                            <div>
                                <input type="text" name="student" required>
                                <label for="student" class="label-name">
                                    <span>
                                        Student Number
                                    </span>
                                </label>
                            </div>


                            <input type="submit" name="" value="Add Teacher">

                        </form>
                    }

                </div>
            </div>
        </div>
    </div>
