
@{
    ViewBag.Title = "ViewClasses";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="content">
    <div class="page-header">
        <div class="pull-left">
            <h2 class="text-dark mb-4">Classes</h2>
        </div>
        <div class="pull-right">
            <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModalCenter">
                &plus;
            </button>
        </div>
        <div class="clearfix"></div>
    </div>


    <!--Classes table-->
    <div class="card shadow">

        <div class="card-header py-3">
            <p class="text-primary m-0 font-weight-bold">All Classes</p>
        </div>

        <div class="card-body">
            <!--div class="container mb-3 mt-3"-->
            <table class="table table-striped table-hover mydatatable" style="width: 100%">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Grade</th>
                        <th>Teacher ID</th>
                        <th>Teacher Title</th>
                        <th>Teacher Surname</th>
                        <th>Teacher Name</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.subject_name</td>
                            <td>@item.grade_number</td>
                            <td>@item.employee_number</td>
                            <td>@item.title</td>
                            <td>@item.surname</td>
                            <td>@item.name</td>
                            <td>
                                @Html.ActionLink("I", "ClassProfile", new { ClassID = @item.ClassID }, new { @class = "btn btn-success btn-circle btn-sm xyz" })
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
            <!--/div-->
        </div>
    </div>
</div>

<div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">New Class</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="box">
                    @using (Html.BeginForm("AddClass", "Teachers", FormMethod.Post))
                    {
                        <form>
                            <div>
                                <select id="subjects" name="subject_name">
                                    <option style="display: none;" disabled selected></option>
                                    <option value="English">English Home Language</option>
                                    <option value="Mathematics">Mathematics</option>
                                    <option value="Geography">Geography</option>
                                    <option value="History">History</option>
                                    <option value="Physical Sciences">Physical Sciences</option>
                                </select>
                                <label for="subject_name" class="label-name">
                                    <span>
                                        Subject
                                    </span>
                                </label>
                            </div>

                            <div>
                                <select id="Grade" name="grade_number">
                                    <option style="display: none;" disabled selected></option>
                                    <option value="8">8</option>
                                    <option value="9">9</option>
                                    <option value="10">10</option>
                                    <option value="11">11</option>
                                    <option value="12">12</option>
                                </select>
                                <label for="grade_number" class="label-name">
                                    <span>
                                        Grade
                                    </span>
                                </label>
                            </div>


                            <div>
                                <input type="text" name="employee_number" autocomplete="off" required>
                                <label for="employee_number" class="label-name">
                                    <span>
                                        Teacher
                                    </span>
                                </label>
                            </div>

                            <input type="submit" name="" value="Add Class">

                        </form>
                    }

                </div>

            </div>
        </div>
    </div>
</div>
