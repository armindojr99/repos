
@{
    ViewBag.Title = "ViewProfile";
    Layout = "~/Views/Shared/StudentLayout.cshtml";
    ViewBag.Heading = Session["surname"].ToString();
}

<div class="content">
    <div class="row">
        <div class="col-md-8">
            <div class="card ">
                <div class="card-header">
                    <h3 class="title">My Profile</h3>
                </div><div class="card-body">
                    <form>
                        <div class="form-row">
                            <div class="col">
                                <div class="form-group">
                                    <label><strong>Student Number</strong></label>
                                    <input class="form-control" type="text" placeholder=@Session["employee_number"].ToString() readonly="readonly" />
                                </div>
                            </div>
                            <div class="col">
                                <div class="form-group">
                                    <label><strong>Title</strong></label>
                                    <input class="form-control" type="email" placeholder=@Session["title"].ToString() readonly="readonly" />
                                </div>
                            </div>
                        </div>

                        <div class="form-row">
                            <div class="col">
                                <div class="form-group">
                                    <label for="first_name"><strong>First Name</strong></label>
                                    <input class="form-control" type="text" placeholder=@Session["name"].ToString() readonly="readonly" />
                                </div>
                            </div>
                            <div class="col">
                                <div class="form-group">
                                    <label for="last_name"><strong>Last Name</strong></label>
                                    <input class="form-control" type="text" placeholder=@Session["surname"].ToString() readonly="readonly" />

                                </div>
                            </div>
                        </div>

                        <div class="form-row">
                            <div class="col">
                                <div class="form-group"><label for="last_name"><strong>Email</strong></label><input class="form-control" type="text" placeholder=@Session["email"].ToString() readonly="readonly" /></div>
                            </div>
                        </div>

                    </form>
                </div>
            </div>
            <div class="card shadow">
                <div class="card-header py-3">
                    <p class="text-primary m-0 font-weight-bold">Password</p>
                </div>

                <div class="card-body">
                    @using (Html.BeginForm("ChangePassword", "Student"))
                    {
                        <div class="form-group"><label for="password"><strong>Current Password</strong></label><input type="password" class="form-control" placeholder="Enter Current Password" name="Password" /></div>

                        <div class="form-row">
                            <div class="col">
                                <div class="form-group"><label for="city"><strong>New Password</strong></label><input type="password" class="form-control" placeholder="Enter New Password" name="New_Password" /></div>
                            </div>

                            <div class="col">
                                <div class="form-group"><label for="country"><strong>Confirm New Password</strong></label><input type="password" class="form-control" placeholder="Confirm New Password" name="New_Password_Confirm" /></div>
                            </div>
                        </div>

                        <div class="form-group"><button class="btn btn-primary btn-sm" type="submit">Save New Password</button></div>

                    }
                </div>
            </div>

        </div>
        <div class="col-md-4">
            <div class="card card-user">
                <div class="card-body">
                    <p class="card-text">
                        <div class="author">
                            <div class="block block-one"></div>
                            <div class="block block-two"></div>
                            <div class="block block-three"></div>
                            <div class="block block-four"></div>
                            <a href="javascript:void(0)">
                                <img class="avatar" src="~/Images/account.png" alt="...">
                                <h5 class="title">@Session["name"].ToString() @Session["surname"].ToString()</h5>
                            </a>
                    <p class="description">
                        Grade @Session["Grade"].ToString() Student
                    </p>
                </div>
                </p>
            </div>
        </div>

    </div>
</div>
      </div>
