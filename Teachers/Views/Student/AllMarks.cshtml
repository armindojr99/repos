
@{
    ViewBag.Title = "AllMarks";
    Layout = "~/Views/Shared/StudentLayout.cshtml";
}

<div class="content">
    <div class="row">
        <div class="col-lg-12">
            <div class="card card-chart">
                <div class="card-header">
                    <h5 class="card-category">All Marks</h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table tablesorter " id="">
                            <tbody>
                                @foreach (var item in Model)
                                {
                                <tr>
                                    <td style="text-align: left;">
                                        @item.subject
                                    </td>
                                    <td style="text-align: left;">
                                        @item.name
                                    </td>
                                    <td style="text-align: center;">
                                        @item.date
                                    </td>

                                    @using (Html.BeginForm())
                                    {
                                        if (item.mark >= 50)
                                        {
                                            <td style="text-align: right;">
                                                <p><span class="markpassed">@item.mark /100</span></p>
                                            </td>
                                        }
                                        else
                                        {
                                            <td style="text-align: right;">
                                                <p><span class="markfailed">@item.mark /100</span></p>
                                            </td>
                                        }
                                    }
                                </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>


<style>
    .markpassed{
    background: #5cb85c;
    color:#fff;
    margin-bottom: 0;
    text-transform: uppercase;
    border-radius: 15px;
    text-align: center;
    margin-left: 20px;
    margin-right: 25px;
    padding-right: 25px;
    padding-left: 20px;
    padding-top: 7px;
    padding-bottom: 7px;
    font-weight: bold;}

    .markfailed{
    background: #d9534f;
    color:#fff;
    margin-bottom: 0;
    text-transform: uppercase;
    border-radius: 15px;
    text-align: center;
    margin-left: 20px;
    margin-right: 25px;
    padding-right: 25px;
    padding-left: 20px;
    padding-top: 7px;
    padding-bottom: 7px;
    font-weight: bold;}
</style>
